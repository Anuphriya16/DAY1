@model List<MVCexample.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>Movie List</h2>
    <br />
    <div>
        <h4>@Html.ActionLink("New Movie", "Create", "Movies")</h4>
    </div>
   <br />
    <table class="table table-bordered table-hover">
        <tr class="thead-dark">

            <th>Movie Name</th>
            <th>Genre</th>
            <th>Edit Option</th>
            <th>Delete Option</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>

                @*<td>@item.MovieName</td>*@
                <td>@Html.ActionLink(item.Movie_Name, "MovieDetails", "Movies", new { id = item.ID }, null)</td>
                <td>
                    @item.Genre.Name
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditMovie", "Movies", new { id = item.ID },null)
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteMovie", "Movies", new { id = item.ID }, null)
                </td>
            </tr>
        }
    </table>
</div>

